<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DanmakuView">
        <attr name="danmaku_textSize" format="dimension" />
        <attr name="danmaku_textColor" format="color" />
        <attr name="danmaku_textShadowColor" format="color" />
        <attr name="danmaku_canvasColor" format="color" />
        <attr name="danmaku_textShadowWidth" format="dimension" />
        <attr name="danmaku_trajectoryMargin" format="dimension" />
        <attr name="danmaku_lineSpacingExtra" format="dimension" />
        <attr name="danmaku_maxWidth" format="dimension" />
        <attr name="danmaku_trajectoryCount" format="integer" />
        <attr name="danmaku_repeatCount" format="integer" />
        <attr name="danmaku_speed" format="float" />
        <attr name="danmaku_interval" format="integer" />
        <attr name="danmaku_countLimit" format="integer" />
        <attr name="danmaku_shadowStyle" format="enum">
            <enum name="layer" value="1" />
            <enum name="stroke" value="2" />
        </attr>
    </declare-styleable>
</resources>